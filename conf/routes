GET     /                       controllers.AuthController.loginPage
POST    /login                  controllers.AuthController.login(request: Request)
GET     /logout                 controllers.AuthController.logout(request: Request)


GET     /register               controllers.PatientController.registerPage
POST    /register               controllers.PatientController.register(request: Request)


GET     /history                controllers.PatientController.history(request: Request)


GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)


GET     /register/account       controllers.AuthController.registerPage()
POST    /register/account       controllers.AuthController.registerAccount(request: Request)


GET     /home                   controllers.HomeController.index(request: Request)


POST    /update-solusi           controllers.PatientController.updatesolusi(request: Request)


GET     /patients/edit/:id     controllers.PatientController.editPage(id, request: Request)
POST    /patients/edit            controllers.PatientController.edit(request: Request)

GET     /patients/delete/:id     controllers.PatientController.delete(id)
